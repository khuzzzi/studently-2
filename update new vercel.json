{
  "version": 2,
  "builds": [
    {
      "src": "studently-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd studently-frontend && npm install && npm run build",
        "outputDirectory": "studently-frontend/dist"
      }
    },
    {
      "src": "studently-backend/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "studently-backend/app.js"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "studently-frontend/dist/$1"
    }
  ]
}
